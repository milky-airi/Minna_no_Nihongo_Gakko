<div class="container">

  <h3><%= @school.school_name %>の詳細情報</h3>

  <table class="table">
    <tr>
      <td>日本語学校名</td>
      <td><%= @school.school_name %></td>
    </tr>
    <tr>
      <td>日本語学校名（かな）</td>
      <td><%= @school.school_name_kana %></td>
    </tr>
    <tr>
      <td>日本語学校名（英語）</td>
      <td><%= @school.school_name_en %></td>
    </tr>
    <tr>
      <td>学校情報</td>
      <td><%= @school.summary %></td>
    </tr>
    <tr>
      <td>最寄駅</td>
      <td><%= @school.station %></td>
    </tr>
    <tr>
      <td>都道府県</td>
      <td><%= @school.prefecture %></td>
    </tr>
    <tr>
      <td>都道府県以降の住所</td>
      <td><%= @school.address %></td>
    </tr>
    <tr>
      <td>HPリンク</td>
      <td><%= @school.hp %></td>
    </tr>
    <tr>
      <td>Facebookリンク</td>
      <td><%= @school.facebook %></td>
    </tr>
    <tr>
      <td>Twitterリンク</td>
      <td><%= @school.twitter %></td>
    </tr>
    <tr>
      <td>Instagramリンク</td>
      <td><%= @school.instagram %></td>
    </tr>
    <tr>
      <td>TikTokリンク</td>
      <td><%= @school.tiktok %></td>
    </tr>
    <tr>
      <td>YouTubeリンク</td>
      <td><%= @school.youtube %></td>
    </tr>
    <tr>
      <td>入学要件</td>
      <td><%= @school.condition %></td>
    </tr>
    <tr>
      <td>学費（年間）</td>
      <td><%= @school.anual_fee.to_s(:delimited) %>円</td>
    </tr>
    <tr>
      <td>学生の国籍</td>
      <td>
        <%#= @school.student_nationality_tags %>
        <% @school.student_nationality_tags.each do |tag| %>
          <li><%= tag.nationality %></li>
        <% end %>
      </td>
    </tr>
    <tr>
      <td>寮の有無</td>
      <td><%= @school.have_dormitory %></td>
    </tr>
    <tr>
      <td>寮の家賃（月額）</td>
      <td>
        <% if @school.dormitory_fee.present? %>
          <%= @school.dormitory_fee.to_s(:delimited) %>円</td>
        <% end %>
    </tr>
    <tr>
      <td>公開状況</td>
      <td><%= @school.is_open %></td>
    </tr>

  </table>

  <%= link_to "編集", edit_admin_school_path, class: "btn btn-success" %>

</div>