<div class="container">

  <div class="row mt-5">
    <h3>学校情報登録</h3>
  </div>

  <div class="row">
    <%= flash[:alert].html_safe if flash[:alert] %>
  </div>

    <%= form_with model: @school, url: admin_schools_path, method: :post do |f| %>

    <div class="row">
      <div class="col-md-5 text-right">
        <%= f.label :学校画像 %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :学校画像出典 %>（URL）
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_area :image_from, class: "form-control", rows: "1" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :日本語学校名 %><span class="text-danger">*</span>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "ABC日本語学校" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :日本語学校名 %>(かな)<span class="text-danger">*</span>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_field :name_kana, class: "form-control", placeholder: "えーびーしーにほんごがっこう" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :日本語学校名 %>(英語)<span class="text-danger">*</span>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_field :name_en, class: "form-control", placeholder: "ABC Japanese Language School"%>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :学校情報 %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_area :summary, class: "form-control", placeholder: "ABC日本語学校は2001年に設立され、これまでに数多くの卒業生を輩出してきました。" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :最寄駅 %><span class="text-danger">*</span>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_field :station, class: "form-control", placeholder: "JR渋谷駅" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :都道府県 %><span class="text-danger">*</span>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.select :prefecture, School.prefectures.keys.map { |key| [I18n.t("enums.school.prefecture.#{key}"), key] }, { include_blank: '選択してください'}, class: "select-box form-control w-50 d-inline" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :都道府県以降の住所 %><span class="text-danger">*</span>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_area :address, class: "form-control", rows: "1", placeholder: "渋谷区1-2-3" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :建物名 %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_field :building, class: "form-control", placeholder: "東京ビル1F" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :ホームページリンク %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_area :hp, class: "form-control", rows: "1", placeholder: "https://abc-nihongo-gakko.example" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :Facebookリンク %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_area :facebook, class: "form-control", rows: "1" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :Twitterリンク %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_area :twitter, class: "form-control", rows: "1" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :Instagramリンク %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_area :instagram, class: "form-control", rows: "1" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :TikTokリンク %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_area :tiktok, class: "form-control", rows: "1" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :YouTubeリンク %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_area :youtube, class: "form-control", rows: "1" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :入学要件 %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_area :condition, class: "form-control", placeholder: "日本語能力N5以上" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :学費 %>(年間)
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_field :anual_fee, class: "form-control", placeholder: "600000" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :寮の有無 %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.radio_button :have_dormitory, :true %>
        <%= f.label :have_dormitory, "あり" %>
        <%= f.radio_button :have_dormitory, :false, checked: true %>
        <%= f.label :have_dormitory, "なし" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :寮の家賃 %>(月額)
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_field :dormitory_fee, class: "form-control", placeholder: "20000" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :学生の国籍 %>(半角スペースで区切ってください)
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_field :nationality, placeholder: "インドネシア", class: "form-control" %>
      </div>
    </div>


    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :定員 %>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.text_field :capacity, placeholder: "40", class: "form-control" %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <%= f.label :公開状況 %><span class="text-danger">*</span>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= f.radio_button :is_open, :true, checked: true %>
        <%= f.label :is_open, "公開" %>
        <%= f.radio_button :is_open, :false %>
        <%= f.label :is_open, "非公開" %>
      </div>
    </div>

      <div class="actions mt-3 text-center mb-5">
        <%= link_to "戻る", admin_schools_path, class: "btn btn-info" %>
        <%= f.submit "登録", class: "btn btn-success" %>
      </div>
    <% end %>

</div>