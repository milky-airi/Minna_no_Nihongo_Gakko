<div class="container">
  <div class="row">

    <div class="col-md-12 mt-5">
      <h5>会員一覧</h5>
    </div>

    <div class="col-md-12">
      <table class="table mt-5">
        <tr>
          <td>No.</td>
          <td>氏名</td>
          <td>氏名（かな）</td>
          <td>レビュー件数</td>
          <td>退会ステータス</td>
          <td>作成日</td>
          <td></td>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name, admin_user_path(user.id) %></td>
          <td><%= user.name_kana %></td>
          <td><%= user.reviews.count %></td>
          <td>
            <% if user.is_deleted == true %>
              退会済み
            <% else %>
              有効
            <% end %>
            </td>
          <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= link_to "編集", edit_admin_user_path(user.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

<%= paginate @users, theme: 'bootstrap-5' %>

</div>