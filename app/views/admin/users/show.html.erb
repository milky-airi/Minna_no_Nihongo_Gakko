<div class="container">

  <div class="row mt-5">
    <h5><%= @user.name %>様の会員情報詳細</h5>
  </div>

  <div class="row">
    <p><%= flash[:notice] %></p>
  </div>

  <div class="row mt-2">
    <div class="col-md-5 text-right mt-4">
      <p>プロフィール画像</p>
    </div>
    <div class="col-md-5 offset-md-1">
      <%= image_tag @user.get_profile_image(100,100) %>
    </div>
  </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>名前</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @user.name %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>メールアドレス</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @user.email %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>国籍</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @user.country %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>職業</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @user.job %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>登録日</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @user.created_at.strftime('%Y/%m/%d') %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        退会ステータス
      </div>
      <div class="col-md-5 offset-md-1">
        <% if @user.is_deleted == true %>
          退会済み
        <% else %>
          有効
        <% end %>
      </div>
    </div>

    <div class="actions text-center mt-5">
      <%= link_to "退会ステータス編集", edit_admin_user_path(@user.id), class: "btn btn-success w-25" %>
    </div>

</div>