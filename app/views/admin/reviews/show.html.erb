        <%= @review.evaluation_facility %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>コメント（施設・設備）</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @review.comment_facility %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>5段階評価（学生）</p>
      </div>
