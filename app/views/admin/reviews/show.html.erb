    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>5段階評価（進路）</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @review.evaluation_after_graduation %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>コメント（進路）</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @review.comment_after_graduation %>
      </div>
