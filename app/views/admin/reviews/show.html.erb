<div class="container">

  <div class="row mt-5">
    <h5>レビュー詳細</h5>
  </div>

  <div class="row">
    <p><%= flash[:notice] %></p>
  </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>レビュー投稿者</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @review.user.name %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>日本語学校名</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @review.school.name %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>星評価</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= render "public/reviews/static_rate", review: @review %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>コメント（全体）</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @review.comment_integer %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>5段階評価（授業）</p>
      </div>
      <div class="col-md-5 offset-md-1">
        <%= @review.evaluation_class %>
      </div>
    </div>

    <div class="row mt-2">
      <div class="col-md-5 text-right">
        <p>コメント（授業）</p>
      </div>
