<div class="container">

  <div class="row mt-3">
    <h3>コース編集</h3>
  </div>

  <div class="row">
    <%= flash[:alert].html_safe if flash[:alert] %>
  </div>

  <div class="row mt-3">
    <%= form_with model: @course, url: admin_course_path(@course.id), method: :patch do |f| %>

      <div class="field">
        <%= f.label :コース名 %><span class="text-danger">*</span><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :日本語学校 %><span class="text-danger">*</span><br />
        <%= f.collection_select :school_id, School.all, :id, :name, {}, { class: "form-control" } %>
      </div>

      <div class="field">
        <%= f.label :入学時期 %>(月)<span class="text-danger">*</span><br />
        <%= f.select :admission_month,  1..12, {}, { class: "form-control w-50" } %>
      </div>

      <div class="field">
        <%= f.label :在学期間 %>（ヶ月）<span class="text-danger">*</span><br />
        <%= f.text_field :duration, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :コースの入学要件 %><br />
        <%= f.text_area :condition, class: "form-control" %>
      </div>

      <div class="actions mt-3">
        <%= link_to "戻る", admin_schools_path, class: "btn btn-info" %>
        <%= f.submit "更新", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

</div>