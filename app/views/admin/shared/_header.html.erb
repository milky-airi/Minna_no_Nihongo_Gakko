<header>
  <div class="container p-3">
    <div class="row">
      <div class="col-md-12">

        <div class="d-flex justify-content-between align-items-center">
          <%= link_to "みんなの日本語学校", admin_root_path, class: "navbar-brand text-dark", 'data-turbolinks': false %>

          <div>
            <nav>
              <ul class="navbar-nav list-group-horizontal">
                <% if admin_signed_in? %>
                <% if Alert.exists?(is_done: false) %>
                  <li>
                    <div class="alert-wrapper">
                       <%= link_to admin_alerts_path, class: "btn btn-outline-secondary mr-3" do %>
                         <i class="fa-solid fa-bell"></i> 通報一覧
                       <% end %>
                       <i class="fa-solid fa-circle fa-sm text-danger alert-mark"></i>
                     </div>
                  </li>
                  <% else %>
                  <li><%= link_to "通報一覧", admin_alerts_path, class: "btn btn-outline-secondary mr-3" %></li>
                <% end %>
                  <li><%= link_to "レビュー一覧", admin_reviews_path, class: "btn btn-outline-secondary mr-3" %></li>
                  <li><%= link_to "会員一覧", admin_users_path, class: "btn btn-outline-secondary mr-3" %></li>
                  <li><%= link_to "学校一覧", admin_schools_path, class: "btn btn-outline-secondary mr-3" %></li>
                  <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-secondary mr-3" %></li>
                <% end %>
              </ul>
            </nav>

            <%= form_with url: admin_search_path, method: :get, local: true, class: "float-right form-inline mt-3" do |f| %>
              <%= f.text_field :word, placeholder: "Search", class: "form-control w-75 mr-2" %>
              <%= f.submit "検索", class: "btn btn-outline-secondary" %>
            <% end %>
          </div>

        </div>

      </div>
    </div>
  </div>
</header>