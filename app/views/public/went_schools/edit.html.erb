<div class="container">
  <div class="row">

    <div class="col-md-9">
      <h3>出身校情報編集</h3>
      <%= form_with model: @went_school, url: went_school_path(@went_school.id), method: :patch do |f| %>

        <div class="field">
          <%= f.label :日本語学校 %><br />
          <%= f.collection_select :school_id, School.all, :id, :name %>
        </div>

        <div class="field">
          <%= f.label :卒業年 %><br />
          <%= f.text_field :graduate_year %>
        </div>

        <div class="field">
          <%= f.label :卒業月 %><br />
          <%= f.select :graduate_month,  1..12 %>
        </div>

        <div class="actions">
          <%= f.submit "更新", class: "btn btn-success" %>
        </div>

      <% end %>

      <%= link_to "出身校削除", went_school_path(current_user.went_school.id), method: :delete, data: { confirm: "出身校情報を削除してもよろしいですか？" }, class: "btn btn-danger" %>

    </div>

    <div class="col-md-3">
      <%= render "public/users/sidebar.html.erb", user: current_user %>
    </div>

  </div>
</div>