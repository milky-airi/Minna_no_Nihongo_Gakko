<div class="container-fluid light-blue-container p-5">
  <div class="row">

  <div class="col-md-11 offset-md-1">
     <h5>お気に入り一覧</h5>
  </div>

    <div class="col-md-7 offset-md-1 bg-white p-4 mt-4">
      <div class="row">
        <% if @favorites.present? %>
        <table class="table">
          <tr>
            <td>No.</td>
            <td>日本語学校名</td>
          </tr>
            <% @favorites.each do |favorite| %>
            <tr>
              <td><%= favorite.school.id %></td>
              <td><%= link_to favorite.school.name, school_path(favorite.school.id) %></td>
            </tr>
            <% end %>
        </table>
        <% else %>
          <div class="mx-auto">
            <h6>お気に入りに登録した日本語学校はありません</h6>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-md-3 offset-md-1 bg-white p-4 mt-4">
      <%= render "public/users/sidebar.html.erb", user: current_user %>
    </div>

  </div>
</div>