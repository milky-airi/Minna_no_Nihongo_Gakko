<div class="container">
  <div class="row">

    <div class="col-md-9">
      <%= flash[:notice] %>
      <h3><%= @user.name %>様のプロフィール</h3>

      <table class="table">
        <tr>
          <td>お名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>お名前（かな）</td>
          <td><%= @user.name_kana %></td>
        </tr>
        <tr>
          <td>国籍</td>
          <td><%= @user.country %></td>
        </tr>
        <tr>
          <td>職業</td>
          <td><%= @user.job %></td>
        </tr>

        <% if @user.went_school.present? %>
        <tr>
          <td>出身校</td>
          <td><%= @user.went_school.school.name %></td>
        </tr>
        <tr>
          <td>卒業年月</td>
          <td><%= @user.went_school.graduate_year %>年<%= @user.went_school.graduate_month %>月</td>
        </tr>
        <% else %>
        <tr>
          <td>出身校</td>
          <td><%= link_to "登録する",new_went_school_path %></td>
        </tr>
        <% end %>

      </table>
    </div>

    <div class="col-md-3">
      <%= render "public/users/sidebar.html.erb", user: current_user %>
    </div>

  </div>
</div>