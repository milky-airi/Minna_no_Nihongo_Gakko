<header>
  <div class="container p-3-">
    <div class="row">
      <div class="col-md-12">

        <div class="d-flex justify-content-between align-items-center">
          <%= link_to "みんなの日本語学校", root_path, class: "navbar-brand text-dark", 'data-turbolinks': false %>

          <div>
            <nav>
              <ul class="navbar-nav list-group-horizontal">
                <% if user_signed_in? %>
                  <li>
                    <%= link_to user_path(current_user.id), class: "btn btn-success mr-3" do %>
                      <i class="fa-solid fa-user" style="color: #ffffff;"></i> マイページ
                    <% end %>
                    </li>
                  <li>
                    <%= link_to favorited_users_path, class: "btn btn-outline-secondary mr-3" do %>
                      <i class="fa-solid fa-heart text-danger"></i> お気に入り
                    <% end %>
                    </li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary mr-3" do %>
                      <i class="fa-solid fa-right-from-bracket"></i> ログアウト
                    <% end %>
                  </li>
                <% else %>
                <li><%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "btn btn-outline-secondary mr-3" %></li>
                <li><%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-secondary mr-3" %></li>
                <li><%= link_to "会員登録", new_user_registration_path, class: "btn mr-3 text-white registration-btn" %></li>
                <% end %>
              </ul>
            </nav>

              <%= form_with url: search_path, method: :get, local: true, class: "float-right form-inline mt-3" do |f| %>
                <%= f.text_field :word, placeholder: "Search", class: "form-control w-75 mr-2" %>
                <%= f.submit "検索", class: "btn btn-outline-secondary" %>
              <% end %>
          </div>

        </div>

      </div>
    </div>
  </div>
</header>